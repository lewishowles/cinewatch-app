{
	"name": "cinewatch-app",
	"version": "0.0.1",
	"description": "Quickly provides the best options for watching multiple films in a day.",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"test:unit": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:unit:run": "vitest run",
		"test:component": "cypress run --component",
		"test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e --config baseUrl=http://localhost:4173/cinewatch/'",
		"lint": "eslint . --fix",
		"deploy": "bun run build; gh-pages -d dist --cname cinewatch.howles.dev"
	},
	"dependencies": {
		"@lewishowles/components": "^1.5.0",
		"@lewishowles/helpers": "^0.19.0",
		"@lewishowles/testing": "^0.10.0",
		"@vueuse/core": "^14.1.0",
		"nanoid": "^5.1.6",
		"tailwindcss": "^4.1.18",
		"vue": "^3.5.26"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@stylistic/eslint-plugin": "^5.7.0",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/typography": "^0.5.19",
		"@vitejs/plugin-vue": "^6.0.3",
		"@vitest/eslint-plugin": "1.6.6",
		"@vitest/ui": "^4.0.17",
		"@vue/test-utils": "^2.4.6",
		"cypress": "^15.9.0",
		"eslint": "^9.39.2",
		"eslint-plugin-cypress": "^5.2.1",
		"eslint-plugin-vue": "^10.6.2",
		"gh-pages": "^6.3.0",
		"globals": "^17.0.0",
		"happy-dom": "^20.1.0",
		"postcss": "^8.5.6",
		"postcss-for": "^2.1.1",
		"simple-git-hooks": "^2.13.1",
		"start-server-and-test": "^2.1.3",
		"tailwindcss-hocus": "^1.0.0",
		"vite": "^7.3.1",
		"vite-plugin-vue-devtools": "^8.0.5",
		"vitest": "^4.0.17"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide",
		"cypress",
		"esbuild",
		"simple-git-hooks"
